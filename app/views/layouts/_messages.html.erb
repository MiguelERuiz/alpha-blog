<div class="container">
  <% flash.each do |name, msg| %>
    <% type_alert = name == "notice" ? "alert-success" : "alert-danger" %>
    <div class="alert <%= type_alert %> alert-dismissable fade show">
      <%= msg %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  <% end %>
</div>